                <option value="WA">WA</option>
                <option value="WV">WV</option>
                <option value="WI">WI</option>
                <option value="WY">WY</option>
            </select>
        </div>
  </div>

  <div class="row">
    <label class="park-label col-md-2">Zip:</label>
    <input class="col-md-3" type="text" name="park[zip]" id="park_zip" value="">
  </div>

  <div class="row">
    <label class="park-label col-md-2">Weekday Hours:</label>
    <input class="col-md-3" type="text" name="park[weekday_hours]" id="park_weekday" value="">
  </div>

  <div class="row">
    <label class="park-label col-md-2">Saturday Hours:</label>
    <input class="col-md-3" type="text" name="park[saturday_hours]" id="park_saturday" value="">
  </div>

  <div class="row">
    <label class="park-label col-md-2">Sunday Hours:</label>
    <input class="col-md-3" type="text" name="park[sunday_hours]" id="park_sunday" value="">
  </div>

  <div class="row">
    <label class="park-label col-md-2">Parking:</label>
    <input class="col-md-3" type="text" name="park[parking]" id="park_parking" value="">
