<body id="login-background">
  <h1 class="login-head">Please login</h1>

  <form id="new_user" action="<%= session_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label class="login-field" for="user_email">Email</label>
    <input type="text" name="user[email]" id="user_email" value="">

    <label class="login-field" for="user_password">Password</label>
    <input type="password" name="user[password]" id="user_password" value="">

    <input class="sub-button" type="submit" value="submit">
  </form>
</div>
